<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/styles.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=search" />
    <title>Basket</title>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const userPic = document.getElementById("user-pic");
            const subMenuWrap = document.getElementById("sub-menu-wrap");

            if (userPic) {
                userPic.addEventListener("click", function() {
                    subMenuWrap.style.display = (subMenuWrap.style.display === "block") ? "none" : "block";
                });
            }
        });
    </script>
</head>
<body>
    {{> header}}

    <section class="catalogue">

        {{#each products}}
            <div class="item">
                <img src="{{this.image_url}}" alt="{{this.name}}">
                <h3>{{this.name}}</h3>
                <p>Â£{{this.price}}</p>

            </div>
        {{/each}}

    </section>

    <section style="padding: 20px;">
        <p>Total Price: {{total}}</p>
        <button class="search-button">Checkout</button>
    </section>

    {{> footer}}

</body>
</html>
