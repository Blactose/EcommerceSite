<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=search" />
    <title>Home</title>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script> 

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const userPic = document.getElementById("user-pic");
            const subMenuWrap = document.getElementById("sub-menu-wrap");

            if (userPic) {
                userPic.addEventListener("click", function() {
                    subMenuWrap.style.display = (subMenuWrap.style.display === "block") ? "none" : "block";
                });
            }
        });
    </script>

    <script>
        $(document).ready(function () {
            let currentIndex = 0;
            const slides = $(".slide");
            const totalSlides = slides.length;

            function showNextSlide() {
                slides.eq(currentIndex).fadeOut(1000);
                currentIndex = (currentIndex + 1) % totalSlides;
                slides.eq(currentIndex).fadeIn(1000);
            }

            setInterval(showNextSlide, 5000); // Change slide every 3 seconds
        });
    </script>

</head>
<body>

    {{> header }}

    <section id="features">
        <div class="content-container">
            <div class="slideshow-container">
                <div class="slideshow">
                    <img src="/images/MAARC-model-1.jpg" alt="MAARC Model 1" class="slide" style="display: block;">
                    <img src="/images/MAARC-model-2.jpg" alt="MAARC Model 2" class="slide" style="display: none;">
                    <img src="/images/MAARC-model-3.jpg" alt="MAARC Model 3" class="slide" style="display: none;">
                </div>
                <div class="overlay text-content">
                    <h1>Black Friday Sales!</h1>
                    <h2>Our Exclusive reMAARCable offers <br>Are now available!</h2>
                    <p>Sales up to 70% off now available until 10/12/2024</p>
                    <a href="shop">
                        <button id="shopnow">Shop Now</button>
                    </a>
                </div>
            </div>
        </div>
    </section>

    <h1 id="title">Featured Items</h1>
    <section class="catalogue">
        <div class="item">
            <img src="/images/items/designer-shirt.png" alt="Designer Shirt">
            <h1>Black Designer Shirt</h1> <!-- Closed the <h1> tag correctly -->
            <p><del>£29.99</del><br>£14.99<br></p>
        </div>
        <div class="item">
            <img src="/images/items/christmas-shirt.png" alt="Festive Christmas Shirt">
            <h1>Festive Christmas Shirt</h1> <!-- Closed the <h1> tag correctly -->
            <p><del>£29.99</del><br>£14.99<br></p>
        </div>
        <div class="item">
            <img src="/images/items/miss-christmas.png" alt="Little Miss Christmas Shirt">
            <h1>Little Miss Christmas Shirt</h1> <!-- Closed the <h1> tag correctly -->
            <p><del>£29.99</del><br>£14.99<br></p>
        </div>
    </section>
    
    {{> footer}}

</body>
</html>
